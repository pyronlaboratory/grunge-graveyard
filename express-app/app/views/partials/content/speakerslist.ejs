<article class="speakerslist <% if (pageID == 'home') { %>jumbotron hidden-xs<% } %>">
  <div class="container">
    <div class="row">
        <% speakers.forEach(function(item) { %>
        <div class="<% if (pageID == 'home') { %>col-sm-4 text-center<% } else { %>col-sm-8 <% } %>">
        <br>
          <h5 class="speakerslist-title"><%= item.name %></h5>
          <h3 class="speakerslist-name">from <a href="/speakers/<%= item.shortname %>"> <%= item.title %> </a></h5>
          <p class="speakerslist-info" >
            <a href="/speakers/<%= item.shortname %>">

              <% if (pageID == 'home') { %>
                <img class="speakerslist-img img-circle" src="/images/speakers/<%= item.shortname %>_tn_x.jpg" alt="Photo of <%= item.name %>" style="width:200px; max-height:200px; border-radius: 50%; display:block; margin-left: auto; margin-right: auto;"></a>
              <% } %>
 
              <% if (pageID == 'speakerList') { %>
                <img class="speakerslist-img img-circle pull-left" src="/images/speakers/<%= item.shortname %>_tn_x.jpg" alt="Photo of <%= item.name %>" style="padding: 15px;width:200px;max-height:200px; border-radius: 50%; display:block; margin-left: auto; margin-right: auto;"></a>
              <% } %>
            </a>

            <% if (pageID == 'speakerDetail') { %>
              <img class="speakerslist-img img-responsive pull-left" src="/images/speakers/<%= item.shortname %>_tn_x.jpg" alt="Photo of <%= item.name %>" style="padding: 15px;width:200px; max-height:200px; border-radius: 50%; display:block; margin-left: auto; margin-right: auto;"></a>
            <% } %>
          </a>

            <% if (pageID !== 'home') { %>
              <% if (pageID == 'speakerList') { %>
                <%= item.summary %> 
              <% } else { %>
                <%- item.summary %> 
              <% } %>
            <% } %>
          </p>
        </div>
        <%  }); %>
    </div><!-- row -->
  </div><!-- container -->
</article>
